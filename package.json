{
  "name": "handbooker",
  "version": "1.5.0",
  "description": "Turn markdown into a players handbook",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monolith-games/handbooker.git"
  },
  "keywords": [
    "players",
    "handbook",
    "d&d",
    "dnd",
    "tabletop",
    "gaming",
    "markdown",
    "pdf",
    "homebrewery"
  ],
  "files": [
    "lib"
  ],
  "author": "Max Clayton Clowes <maxcc@me.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/monolith-games/handbooker/issues"
  },
  "homepage": "https://github.com/monolith-games/handbooker#readme",
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir lib --ignore '**/*.spec.js' && copyfiles src/styles/* lib",
    "format": "prettier --write src/",
    "format:staged": "pretty-quick --staged --pattern ./src/**",
    "test": "jest",
    "test:watch": "jest --watch --runInBand --bail"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:staged && npm run build"
    }
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "html-pdf-chrome": "^0.6.1",
    "marked": "^1.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "babel-jest": "^25.1.0",
    "copyfiles": "^2.4.0",
    "husky": "^4.3.0",
    "jest": "^25.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  }
}
